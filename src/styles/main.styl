@import 'frameworks/vuetify';

:root {
  --sans-serif-font: "FS Me", "Arial", "Helvetica", sans-serif;
  --serif-font: "Fedra Serif", "Georgia", "Times New Roman", sans-serif;
  --base-font-size: 18px;
}

body {
  font-size 18px;
  font-weight: 500;
  font-family: "FS Me", "Helvetica Neue", Arial, sans-serif;
}

.application .v-toolbar[main-toolbar] {
  background-color #fff
  border-bottom 1px solid $secondary
}

p {
  margin: 1em 0;
  font-size: 1em;
  line-height: 1.5em;
}

a {
  color: #A60042 !important;
}

h1, h2, h3, h4, h5 {
  color: $secondary;
  font-weight: 400;
}

h1 {
  margin: 0.67em 0;
  font-family: "Fedra Serif", "Georgia", "Times New Roman", sans-serif;
  font-size: 2.66667em;
  font-weight: 500;
  line-height: 1.2em;
}

h2 {
  margin: 0 0 0.83em 0;
  font-size: 28px;
  font-weight: 700;
  line-height: 40px;
  color: #262626 !important;

  // @media (min-width: 600px) {
  //   font-size: 2.33333em;
  // }
}

h3 {
  margin: 0 0 0.83em 0;
  font-size: 18px;
  font-weight: 700;
  line-height: 28px;
  color: #262626;
}

h4 {
  margin: 0 0 0.32em 0;
  font-size: 14px;
  font-weight: 700;
  line-height: 14px;
  text-transform: uppercase;
  color: #C8C8C8;
}



.v-btn {
  margin-top: 0px;
  margin-bottom: 10px;
  margin-left: 0 !important;
  margin-right: 12px;
  font-size: 14px !important;
  line-height: 20px !important;
  text-transform none;
  background-color: #FFF !important;
  color: #A60042 !important;
  border-color: #A60042 !important;

  &--large {
    height: 50px;
    padding: 0 15px 0 15px;
    font-size: 1.22222em;
    box-shadow: 0 0 12px rgba(0, 0, 0, .5);
  }

  &:not(.v-btn--icon):not(.v-btn--flat):hover {
    background-color: #A60042 !important;
    color: #FFF !important;
    border-color: #A60042 !important;
  }

  // &.primary {
  //   background-color #fff !important
  //   border-radius 50%
  //   border 1px solid $primary
  //   color $primary
  // }
}



.v-alert, .v-card {
  border-radius: 9px !important;
  padding: 24px !important;
  font-size: 16px;
  line-height: 24px;
  color: #2b2b2b;
}

.v-alert.v-alert {
  border: 1px solid #D9D9D9 !important;
  padding: 24px !important;
}



.v-card__title {
  background: #FAFAFA;
  border: 1px solid #CCC;
  font-size: 18px;
}



.info {
  background-color: #FFF !important;
}


.info-box {
  padding: 30px;
  background-color: #e1e0de;
}




.theme--light.application {
  background-color: #fff;
  color: #6a625a;
  font-family: "FS Me", "Helvetica Neue", Arial, sans-serif;
}

.theme--light.v-text-field--box .v-input__slot {
  background-color: #FFF;
  border: 1px solid #CCC;
}

.theme--light.v-text-field--box:not(.v-input--is-focused) .v-input__slot:hover {
  background-color: #FAFAFA;
}

.services {
  &__item {
    position relative
    padding-right 50px

    &__icon {
      position absolute
      right 5px
      top 0
      bottom 0
      margin auto
      height 36px
      width 36px
    }
  }
}
